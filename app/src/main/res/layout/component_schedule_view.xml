<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:component_progress_value="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"


    >
    <TextView
        android:id="@+id/schedule_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/e_n"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="35sp"
        android:lineSpacingMultiplier="0.7"/>
    <TextView
        android:id="@+id/schedule_view_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:layout_centerInParent="true"
        android:layout_alignBottom="@+id/schedule_view_progressBar"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        />
    <ProgressBar
        android:id="@+id/schedule_view_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:progress="50"
        />

</RelativeLayout>